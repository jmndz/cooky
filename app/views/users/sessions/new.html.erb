<div class="sign-in">
  <div class="container h-100 px-3 px-xxl-0">
    <div class="col-12 col-md-5 col-lg-4 col-xl-3 h-100">
      <div class="h-100 d-flex flex-column justify-content-center">
        <div class="header d-flex flex-column align-items-center align-items-md-start pb-5">
          <%= image_tag "cooky.svg", class:"logo", alt: "cooky logo" %>
          <h6 class="description mt-2">Recipes from all over the world</h6>
        </div>

        <div class="form text-primary mt-5 px-4 px-sm-0">
          <%= form_with model: @user, url: user_session_path do |form| %>
            <div class="mb-3">
              <%= form.label :email, class: "form-label mb-1" %>
              <%= form.email_field :email, class: "form-control rounded-pill", required: true %>
            </div>

            <div class="mb-4">
              <label for="password" class="form-label mb-1">Password</label>
              <div class="password">
                <%= form.password_field :password, class: "form-control rounded-pill" %>
                <%= button_tag type: :button, class: "icon rounded-circle" do %>
                  <%= image_tag "eye.svg", alt: "show password" %>
                <% end %>
              </div>
              <div class="text-end">
                <%= link_to "Forgot password", "#", class: "fs-sm text-secondary text-decoration-none mt-2" %>
              </div>
            </div>

            <div class="mb-5 mb-sm-4">
              <%= form.submit "Log In", class: "btn btn-primary rounded-pill w-100" %>
            </div>

            <div class="text-center text-sm-start pt-5 pt-sm-0">
              <div class="text-dark">Not yet registered?</span>
              <%= link_to "Sign up now!", new_user_registration_path, class: "fw-bold text-uppercase" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>