<tr class="text-center">
  <td><%= recipe.name %></td>
  <td><%= recipe.number_of_servings %></td>
  <td><%= recipe.preparation_time %></td>
  <td><%= recipe.user.name %></td>
  <td>
    <div class="btn-group dropdown">
      <button type="button" class="btn btn-outline-dark dropdown-toggle px-3" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Action
      </button>
      <div class="dropdown-menu my-1">
        <%= link_to "View", admin_recipe_path(recipe), class: "dropdown-item" %>
        <%= link_to "Edit", edit_admin_recipe_path(recipe), class: "dropdown-item" %>
        <%= link_to "Delete", admin_recipe_path(recipe), class: "dropdown-item text-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove '#{recipe.name}'?" } %>
      </div>
    </div>
  </td>
</tr>