<div class="container py-4 py-sm-5">
  <div class="px-3 px-xxl-0">
    <div class="ps-3 pb-2 pe-0 text-end d-none d-sm-block">
      <%= link_to "New Recipe", new_admin_recipe_path, class: "btn btn-primary rounded-pill px-3" %>
    </div>
    
    <div class="card my-3">
      <div class="card-body table-responsive">
        <table class="table align-middle">
          <thead>
            <tr class="text-center">
              <th scope="col">Recipe Name</th>
              <th scope="col">No. of Servings</th>
              <th scope="col">Preparation Time</th>
              <th scope="col">User</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% if @recipes.present? %>
              <%= render partial: "admin/recipes/recipe", collection: @recipes, as: :recipe %>
            <% else %>
              <tr class="text-center">
                <td class="h3 opacity-25 py-4" colspan="4">
                  <i class='bi bi-search text-secondary me-3'></i>No results found.
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="d-flex justify-content-center">
        <%== pagy_bootstrap_nav(@pagy) if @recipes.present? %>
      </div>
  </div>
</div>
